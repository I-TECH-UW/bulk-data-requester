        <relativePath />
    </parent>
	<artifactId>bulk-data-requester</artifactId>
	<packaging>jar</packaging>
	<name>Bulk Data Requester</name>
	
	<properties>
		<java.version>11</java.version>
		<log4j.version>2.15.0</log4j.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
